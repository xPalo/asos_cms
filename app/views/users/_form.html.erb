<div class="form-signin my-4 mx-auto w-75">
  <%= form_with(model: author) do |form| %>
    <div class="form-group mb-3">
      <%= form.label :first_name %>
      <%= form.text_field :first_name, class:"form-control"%>
    </div>

    <div class="form-group mb-3">
      <%= form.label :last_name %>
      <%= form.text_field :last_name, class:"form-control" %>
    </div>

    <div class="form-group mb-3">
      <%= form.label :email %>
      <%= form.text_field :country, class:"form-control" %>
    </div>

    <div class="form-group mb-3">
      <%= form.number_field :user_id, id: :author_user_id, type: :hidden, class:"form-control", value: current_user.id %>
    </div>

    <%= form.submit class:"btn btn-lg btn-primary my-auto"%>
  <% end %>
</div>