<% if comments.any? %>
<div class="text-center mx-auto w-100">
  <table class="table table-hover table-active text-light">
    <thead>
      <tr>
        <th scope="col"><%= t('comment.content') %></th>
        <th scope="col"><%= t('comment.author') %></th>
        <th scope="col"><%= t('comment.created_at') %></th>
      </tr>
    </thead>
    <tbody>
    <% comments.each do |comment| %>
      <tr class="text-light">
        <td><%= comment.content.first(20) %></td>
        <td><%= link_to comment.user.full_name, comment.user, class:"text-light" %></td>
        <td><%= comment.created_at %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>
<% end %>