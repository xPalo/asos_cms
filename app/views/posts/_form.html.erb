<h1 class="text-center"> <%= t(:"post.#{action}") %> </h1>

<div class="form-signin my-4 mx-auto w-75">
  <%= form_with(model: post) do |form| %>

    <div>
      <%= form.label t(:'post.title') %>
      <%= form.text_field :title, class:"form-control"%>
    </div>

    <div>
      <%= form.label t(:'post.content') %>
      <%= form.text_area(:content, class:"form-control") %>
    </div>

    <div>
      <%= form.label t(:'post.is_public') %>
      <%= form.check_box :is_public, class:"form-check-input" %>
    </div>

    <%= form.hidden_field :user_id, value: current_user.id %>

    <hr>

    <div class="actions">
      <%= form.submit t(:"button_#{action}"), class:"btn btn-lg btn-light my-auto" %>
    </div>
  <% end %>
</div>