<h1 class="text-center"> <%= t("post.#{action}") %> </h1>

<%= render 'devise/shared/error_messages', resource: @post %>

<div class="form-signin my-4 mx-auto w-75">
  <%= form_for(@post) do |form| %>

    <div>
      <%= form.label :title %>
      <%= form.text_field :title, class:"form-control"%>
    </div>

    <div>
      <%= form.label :content %>
      <%= form.text_area(:content, class:"form-control") %>
    </div>

    <div>
      <%= form.label :is_public %>
      <%= form.check_box :is_public, class:"form-check-input" %>
    </div>

    <hr>

    <div class="actions">
      <%= form.submit t("button_#{action}"), class:"btn btn-lg btn-light my-auto" %>
    </div>
  <% end %>
</div>