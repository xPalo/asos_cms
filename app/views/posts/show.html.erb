<%= render 'post', post: @post %>
<%= render 'user_comments', comments: @comments %>

<% if @post.user == current_user %>
    <%= button_to t(:delete), post_path(@post), data: { confirm: I18n.t(:delete_confirmatiom) }, method: :delete, class:"btn btn-danger my-auto mx-2" %>

    <%= link_to t(:edit), edit_post_path(@post), class:"btn btn-warning my-auto mx-2" %>
<% end %>
