<form action="<%= action %>" method="get" class="form mb-3 justify-content-center text-center my-auto">
  <div class="form-group d-flex justify-content-center my-auto mb-2">
    <input type="text" id="search_posts" name="search_posts" placeholder="<%= t('order.search') %>" class="form-control w-50 mx-2" value="<%= params[:search_posts] %>">
  </div>
  <div class="form-group d-flex justify-content-center my-auto mb-2">
    <select class="form-select w-50 d-flex justify-content-center" aria-label="default select form-select example" name="order_posts">
      <option value="" disabled <%= 'selected' if params[:order_posts].blank? %> ><%= t('order.order_by') %></option>
      <% %w(title_asc title_desc content_asc content_desc votes_asc votes_desc comments_count_asc comments_count_desc).each do |attr| %>
        <option value="<%= attr %>" <%= 'selected' if params[:order_posts] == attr %>><%= t("order.#{attr}") %></option>
      <% end %>
    </select>
  </div>
  <button type="submit" class="btn btn-outline-light mx-2"><%= t('order.submit') %></button>
</form>