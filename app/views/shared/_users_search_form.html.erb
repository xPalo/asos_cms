<form action="<%= action %>" method="get" class="form mb-3 justify-content-center text-center my-auto">
  <div class="form-group d-flex justify-content-center my-auto mb-2">
    <input type="text" id="search_users" name="search_users" placeholder="<%= t('order.search') %>" class="form-control w-50 mx-2" value="<%= params[:search_users] %>">
  </div>
  <div class="form-group d-flex justify-content-center my-auto mb-2">
    <select class="form-select w-50 d-flex justify-content-center" aria-label="default select form-select example" name="order_users">
      <option value="" disabled <%= 'selected' if params[:order_users].blank? %> ><%= t('order.order_by') %></option>
      <% %w(first_name_asc first_name_desc last_name_asc last_name_desc).each do |attr| %>
        <option value="<%= attr %>" <%= 'selected' if params[:order_users] == attr %>><%= t("order.#{attr}") %></option>
      <% end %>
    </select>
  </div>
  <button type="submit" class="btn btn-outline-light mx-2"><%= t('order.submit') %></button>
</form>