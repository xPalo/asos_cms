<ul class="nav mb-3 d-flex justify-content-center text-center" id="pills-tab" role="tablist">
  <li class="nav-item" role="presentation">
    <button id="methodAbtn" class="active btn btn-sm btn-outline-light mx-2" id="pills-home-tab" data-bs-toggle="pill" data-bs-target="#methodA" type="button" role="tab" aria-controls="pills-home" aria-selected="true"><%= t('activerecord.models.message.send.other') %></button>
  </li>
  <li class="nav-item" role="presentation">
    <button id="methodBbtn" class="btn btn-sm btn-outline-light mx-2" data-bs-toggle="pill" data-bs-target="#methodB" type="button" role="tab" aria-controls="pills-contact" aria-selected="false"><%= t('activerecord.models.message.receive.other') %></button>
  </li>
</ul>

<div class="tab-content" id="pills-tabContent">
  <div class="tab-pane fade show active" id="methodA" role="tabpanel" aria-labelledby="pills-home-tab">
    <% if @sender_messages.any? %>
      <table class="table table-striped table-bordered table-hover">
        <thead class="table-primary">
        <tr>
          <th scope="col"><%= t("message.subject") %></th>
          <th scope="col"><%= t("message.content") %></th>
          <th scope="col"><%= t("message.actions") %></th>
        </tr>
        </thead>
        <tbody class="table-primary">
        <% @sender_messages.each do |sended| %>
          <tr>
            <td><%= sended.subject %></td>
            <td><%= sended.content %></td>
            <td>
              <div class="btn-group" role="group">
                <%= link_to t("message.show_message"), user_message_path(current_user, sended), class: 'btn btn-primary btn-sm' %>
                <%= link_to t("message.delete"), user_message_path(current_user, sended), class: 'btn btn-danger btn-sm', data: {turbo_method: :delete, turbo_confirm: 'Are you sure?'} %>
              </div>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
    <% end %>
  </div>

  <div class="tab-pane fade" id="methodB" role="tabpanel" aria-labelledby="pills-home-tab">

    <% if @receiver_messages.any? %>
      <table class="table table-striped table-bordered table-hover">
        <thead class="table-primary">
        <tr>
          <th scope="col"><%= t("message.subject") %></th>
          <th scope="col"><%= t("message.content") %></th>
          <th scope="col"><%= t("message.actions") %></th>
        </tr>
        </thead>
        <tbody class="table-primary">
        <% @receiver_messages.each do |received| %>
          <tr>
            <td><%= received.subject %></td>
            <td><%= received.content %></td>
            <td>
              <div class="btn-group" role="group">
                <%= link_to t("message.show_message"), user_message_path(current_user, received), class: 'btn btn-primary btn-sm' %>
                <%= link_to t("message.delete"), user_message_path(current_user, received), class: 'btn btn-danger btn-sm', data: {turbo_method: :delete, turbo_confirm: 'Are you sure?'} %>
              </div>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
    <% end %>
  </div>
</div>
