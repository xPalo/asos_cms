<h1 class="text-center">Create Message</h1>
<%= render 'devise/shared/error_messages', resource: @message %>

<div class="form-signin my-4 mx-auto w-75">
  <%= form_for @message, url: user_messages_path(@user_id) do |form| %>

    <div>
      <%= form.label :subject %>
      <%= form.text_field :subject, class: "form-control"%>
    </div>

    <div>
      <%= form.label :content %>
      <%= form.text_area :content, class: "form-control"%>
    </div>

    <hr>

    <div class="actions">
      <%= form.submit "Send", class: "btn btn-lg btn-light my-auto" %>
    </div>
<% end %>
</div>