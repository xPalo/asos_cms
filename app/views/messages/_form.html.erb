<%= render 'devise/shared/error_messages', resource: @message %>

<div class="form-signin my-2 mx-auto w-75">
  <%= form_for(@message, url: user_messages_path(@user)) do |form| %>
    <div>
      <%= form.label :subject %>
      <%= form.text_field :subject, class: "form-control"%>
    </div>

    <div>
      <%= form.label :content %>
      <%= form.text_area :content, class: "form-control"%>
    </div>

    <hr>

    <div class="actions">
      <%= form.submit t('submit'), class: "btn btn-primary m-1" %>
      <%= link_to t('back'), :back, class: 'btn btn-outline-light m-1' %>
    </div>
    <% end %>
</div>
